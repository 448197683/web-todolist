<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./components/HEADER.ejs')%>
    <script defer src="../js/desc.js"></script>
    <link rel="stylesheet" href="/css/desc.css" />
  </head>
  <body>
    <%- include('./components/NAV.ejs')%>
    <div class="container mt-5">
      <h1>DESCRITPTION</h1>
      <div id="<%=todolist._id%>">
        <p><%=todolist.todo%></p>
        <button type="button" class="btn btn-warning" id="editBtn">EDIT</button>
        <button type="button" class="btn btn-danger" id="delBtn">DELETE</button>
      </div>
      <!-- EDIT FORM -->
      <div id="editForm" class="hide">
        <form action="#/">
          <input type="text" value="<%=todolist.todo%>" />
          <button type="submit" class="btn btn-success" id="doneBtn">
            DONE
          </button>
        </form>
      </div>
    </div>
  </body>
</html>
